[core]
  editor = vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[alias]
  ap = add -p
  ca = commit --amend
  cm = commit -m
  d = diff --ignore-space-change
  l = log --oneline --graph
  lp = log --patch
  s = status --short

[diff]
  tool = vimdiff
