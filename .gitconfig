  email = alexander.grueneberg@googlemail.com

[core]
  editor = vim

[alias]
  ap = add -p
  c = commit
  ca = commit --amend
  cm = commit -m
  d = diff --ignore-space-change
  ds = diff --staged
  l = log --oneline --graph
  lp = log --patch
  s = status --short

[diff]
  tool = vimdiff
